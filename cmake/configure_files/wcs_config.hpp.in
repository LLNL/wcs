#cmakedefine WCS_HAS_METIS
#cmakedefine WCS_HAS_STD_FILESYSTEM
#cmakedefine WCS_HAS_PROTOBUF

#cmakedefine WCS_VERTEX_LIST_TYPE @WCS_VERTEX_LIST_TYPE@
